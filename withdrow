
import React, { useState } from 'react';

interface WithdrawalFormProps {
  onSubmit: (data: { amount: number, method: 'bKash' | 'Nagad', number: string }) => void;
  balance: number;
}

const WithdrawalForm: React.FC<WithdrawalFormProps> = ({ onSubmit, balance }) => {
  const [amount, setAmount] = useState('');
  const [method, setMethod] = useState<'bKash' | 'Nagad'>('bKash');
  const [number, setNumber] = useState('');

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    const numAmount = parseFloat(amount);
    if (isNaN(numAmount) || numAmount < 20) return alert("Minimum withdrawal is ৳20");
    if (numAmount > balance) return alert("Insufficient balance!");
    if (!number || number.length < 11) return alert("Enter valid phone number");

    onSubmit({ amount: numAmount, method, number });
    setAmount('');
    setNumber('');
  };

  return (
    <div className="space-y-6">
      <div className="bg-gradient-to-r from-blue-600 to-indigo-700 p-6 rounded-3xl text-white shadow-lg">
        <p className="text-sm opacity-80 mb-1">Available to Withdraw</p>
        <h2 className="text-3xl font-extrabold italic">৳{balance.toFixed(2)}</h2>
      </div>

      <div className="bg-white p-6 rounded-3xl shadow-sm border border-gray-100">
        <h3 className="text-lg font-bold text-gray-800 mb-4">Request Withdrawal</h3>
        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <label className="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Select Method</label>
            <div className="grid grid-cols-2 gap-3">
              <button 
                type="button"
                onClick={() => setMethod('bKash')}
                className={`p-3 rounded-xl border-2 transition font-bold text-sm ${method === 'bKash' ? 'border-pink-500 bg-pink-50 text-pink-600' : 'border-gray-100'}`}
              >
                bKash
              </button>
              <button 
                type="button"
                onClick={() => setMethod('Nagad')}
                className={`p-3 rounded-xl border-2 transition font-bold text-sm ${method === 'Nagad' ? 'border-orange-500 bg-orange-50 text-orange-600' : 'border-gray-100'}`}
              >
                Nagad
              </button>
            </div>
          </div>

          <div>
            <label className="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Phone Number</label>
            <input 
              type="tel" 
              required
              placeholder="01XXXXXXXXX"
              className="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-blue-500 outline-none"
              value={number}
              onChange={(e) => setNumber(e.target.value)}
            />
          </div>

          <div>
            <label className="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Amount (Min. ৳20)</label>
            <input 
              type="number" 
              required
              placeholder="0.00"
              className="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-blue-500 outline-none"
              value={amount}
              onChange={(e) => setAmount(e.target.value)}
            />
          </div>

          <button 
            type="submit"
            className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-2xl transition shadow-xl mt-4"
          >
            Confirm Withdrawal
          </button>
        </form>
      </div>

      <div className="bg-amber-50 p-4 rounded-2xl border border-amber-100">
        <h4 className="text-amber-700 font-bold text-sm mb-2"><i className="fa-solid fa-circle-info mr-2"></i>Withdrawal Info</h4>
        <ul className="text-xs text-amber-600 space-y-1 list-disc pl-4">
          <li>Withdrawal processing time: 1-12 hours.</li>
          <li>Make sure your number is correct.</li>
          <li>System auto-deducts balance upon request.</li>
        </ul>
      </div>
    </div>
  );
};

export default WithdrawalForm;
