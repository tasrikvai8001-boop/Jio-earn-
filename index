
import React, { useState } from 'react';
import { auth, db } from '../firebase';
import { createUserWithEmailAndPassword, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
import { ref, set } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";
import { APP_NAME } from '../constants';
import { User } from '../types';

interface AuthProps {
  onLogin: () => void;
}

const Auth: React.FC<AuthProps> = ({ onLogin }) => {
  const [isLogin, setIsLogin] = useState(true);
  const [loading, setLoading] = useState(false);
  const [form, setForm] = useState({
    name: '',
    email: '',
    phone: '',
    password: '',
    referralCode: ''
  });

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!form.email.includes('@')) return alert("সঠিক জিমেইল দিন");
    if (form.password.length < 6) return alert("পাসওয়ার্ড কমপক্ষে ৬ অক্ষরের হতে হবে");
    
    setLoading(true);

    try {
      if (isLogin) {
        await signInWithEmailAndPassword(auth, form.email, form.password);
      } else {
        const userCredential = await createUserWithEmailAndPassword(auth, form.email, form.password);
        const firebaseUser = userCredential.user;

        const newUser: User = {
          id: firebaseUser.uid,
          name: form.name,
          email: form.email,
          phone: form.phone,
          balance: 0,
          referralIncome: 0,
          referralCount: 0,
          totalWithdraw: 0,
          isActivated: false,
          role: form.email.toLowerCase() === 'admin@gmail.com' ? 'ADMIN' : 'USER',
          joinedAt: new Date().toLocaleDateString('en-BD'),
          refId: Math.floor(100000 + Math.random() * 900000).toString(),
          leaderName: 'Admin',
          referredBy: form.referralCode || undefined
        };

        await set(ref(db, `users/${firebaseUser.uid}`), newUser);
      }
      onLogin();
    } catch (error: any) {
      alert("ত্রুটি: " + error.message);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-white flex flex-col justify-center px-6">
      <div className="max-w-sm mx-auto w-full space-y-8 animate-in fade-in duration-700">
        <div className="text-center">
          <h1 className="text-5xl font-black text-blue-600 italic tracking-tighter mb-2 drop-shadow-sm">{APP_NAME}</h1>
          <p className="text-gray-400 font-bold uppercase text-[10px] tracking-widest">Digital Earning Platform</p>
        </div>

        <form onSubmit={handleSubmit} className="space-y-4">
          {!isLogin && (
            <div className="space-y-1">
              <label className="text-[10px] font-black uppercase text-gray-400 ml-2 tracking-widest">Full Name</label>
              <input type="text" required className="w-full p-4 bg-gray-50 rounded-2xl border-2 border-transparent focus:bg-white focus:border-blue-500 outline-none transition-all font-bold text-sm" placeholder="পুরো নাম লিখুন" onChange={e => setForm({...form, name: e.target.value})} />
            </div>
          )}
          
          <div className="space-y-1">
            <label className="text-[10px] font-black uppercase text-gray-400 ml-2 tracking-widest">Email Address</label>
            <input type="email" required className="w-full p-4 bg-gray-50 rounded-2xl border-2 border-transparent focus:bg-white focus:border-blue-500 outline-none transition-all font-bold text-sm" placeholder="আপনার জিমেইল" onChange={e => setForm({...form, email: e.target.value})} />
          </div>

          {!isLogin && (
            <div className="space-y-1">
              <label className="text-[10px] font-black uppercase text-gray-400 ml-2 tracking-widest">Phone Number</label>
              <input type="tel" required className="w-full p-4 bg-gray-50 rounded-2xl border-2 border-transparent focus:bg-white focus:border-blue-500 outline-none transition-all font-bold text-sm" placeholder="বিকাশ/নগদ নাম্বার" onChange={e => setForm({...form, phone: e.target.value})} />
            </div>
          )}

          <div className="space-y-1">
            <label className="text-[10px] font-black uppercase text-gray-400 ml-2 tracking-widest">Password</label>
            <input type="password" required className="w-full p-4 bg-gray-50 rounded-2xl border-2 border-transparent focus:bg-white focus:border-blue-500 outline-none transition-all font-bold text-sm" placeholder="পাসওয়ার্ড দিন" onChange={e => setForm({...form, password: e.target.value})} />
          </div>

          {!isLogin && (
            <div className="space-y-1">
              <label className="text-[10px] font-black uppercase text-gray-400 ml-2 tracking-widest">Referral (Optional)</label>
              <input type="text" className="w-full p-4 bg-gray-50 rounded-2xl border-2 border-transparent focus:bg-white focus:border-blue-500 outline-none transition-all font-bold text-sm" placeholder="রেফার কোড" onChange={e => setForm({...form, referralCode: e.target.value})} />
            </div>
          )}

          <button disabled={loading} className="w-full bg-blue-600 text-white font-black py-5 rounded-2xl shadow-xl shadow-blue-100 active:scale-95 transition-all mt-4">
            {loading ? (
              <div className="flex items-center justify-center gap-2">
                <div className="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                <span>অপেক্ষা করুন...</span>
              </div>
            ) : (isLogin ? 'লগইন করুন' : 'একাউন্ট খুলুন')}
          </button>
        </form>

        <button onClick={() => setIsLogin(!isLogin)} className="w-full text-blue-600 font-bold text-sm hover:underline">
          {isLogin ? "নতুন একাউন্ট নেই? সাইন আপ করুন" : "ইতিমধ্যেই একাউন্ট আছে? লগইন"}
        </button>
      </div>
    </div>
  );
};

export default Auth;
